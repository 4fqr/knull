// =============================================================================
// ENVIRONMENT
// =============================================================================

// Get environment variable
pub fn getenv(name: *const u8) -> *const u8 {
    // Simplified implementation
    unsafe {
        let mut i = 0
        while true {
            let env_ptr = *(__environ as *const *const u8).offset(i)
            if env_ptr as u64 == 0 {
                break
            }
            if __strcmp(env_ptr, name) == 0 {
                // Found it, return value part after '='
                let j = 0
                while *env_ptr.offset(j) != 0 {
                    if *env_ptr.offset(j) == '=' as u8 {
                        return env_ptr.offset(j + 1)
                    }
                    j += 1
                }
            }
            i += 1
        }
        null
    }
}

// =============================================================================
// PROCESS EXECUTION HELPERS
// =============================================================================

// Simple command execution
pub fn exec(path: string, args: [string]) -> i32 {
    let argv = args.map(|s| s.as_ptr())
    let envp: [*const u8; 1] = [null]
    
    let path_ptr = path.as_ptr()
    let argv_ptr = argv.as_ptr()
    
    execve(path_ptr, argv_ptr, envp)
}

// Shell command execution
pub fn system(cmd: string) -> i32 {
    let pid = fork()
    
    if pid == 0 {
        // Child
        exec("/bin/sh", ["sh", "-c", cmd])
        exit(127)
    } else if pid > 0 {
        // Parent
        let status: i32
        wait4(pid, &status, 0, null)
        status
    } else {
        -1
    }
}

