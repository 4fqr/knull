    syscall(SYS_mmap, addr as u64, length as u64, prot as u64, flags as u64, fd as u64, offset as u64) as *mut u8
}

// Unmap memory
pub fn munmap(addr: *mut u8, length: usize) -> i32 {
    syscall(SYS_munmap, addr as u64, length as u64) as i32
}

// Change memory protection
pub fn mprotect(addr: *mut u8, length: usize, prot: i32) -> i32 {
    syscall(SYS_mprotect, addr as u64, length as u64, prot as u64) as i32
}

// Change memory permissions to RWX
pub fn mprotect_rwx(addr: *mut u8, length: usize) -> i32 {
    mprotect(addr, length, PROT_READ | PROT_WRITE | PROT_EXEC)
}

// Change memory permissions to RW
pub fn mprotect_rw(addr: *mut u8, length: usize) -> i32 {
    mprotect(addr, length, PROT_READ | PROT_WRITE)
}

// Change memory permissions to RX
pub fn mprotect_rx(addr: *mut u8, length: usize) -> i32 {
    mprotect(addr, length, PROT_READ | PROT_EXEC)
}

// Change memory permissions to R
pub fn mprotect_r(addr: *mut u8, length: usize) -> i32 {
    mprotect(addr, length, PROT_READ)
}

// Extend heap (brk)
pub fn brk(addr: *mut u8) -> *mut u8 {
    syscall(SYS_brk, addr as u64) as *mut u8
}

