// =============================================================================
// SYSTEM CALL WRAPPER
// =============================================================================

// Generic syscall invocation
pub fn syscall(nr: u64, args: ...u64) -> i64 {
    unsafe {
        asm intel {
            "mov rax, ${0}"
            "syscall"
            : "=rax"(result)
            : "r"(nr), "r"(args[0]), "r"(args[1]), "r"(args[2]), 
              "r"(args[3]), "r"(args[4]), "r"(args[5])
            : "rcx", "r11", "memory"
        }
    }
}

// =============================================================================
// PROCESS MANAGEMENT
// =============================================================================

// Get current process ID
pub fn getpid() -> u32 {
    syscall(SYS_getpid) as u32
}

// Get current user ID
pub fn getuid() -> u32 {
    syscall(SYS_getuid) as u32
}

// Get effective user ID
pub fn geteuid() -> u32 {
    syscall(SYS_geteuid) as u32
}

// Get current process group ID
pub fn getpgrp() -> u32 {
    syscall(SYS_getpgrp) as u32
}

// Get parent process ID
pub fn getppid() -> u32 {
    syscall(SYS_getppid) as u32
}

// Get thread ID
pub fn gettid() -> u32 {
    syscall(SYS_gettid) as u32
}

// Fork process
pub fn fork() -> i32 {
    syscall(SYS_fork) as i32
}

// Clone (create thread/process)
pub fn clone(flags: u64, stack: *mut u8, parent_tid: *mut i32, child_tid: *mut i32, tls: u64) -> i32 {
    syscall(SYS_clone, flags, stack as u64, parent_tid as u64, child_tid as u64, tls) as i32
}

// Execute program
pub fn execve(path: *const u8, argv: *const *const u8, envp: *const *const u8) -> i32 {
    syscall(SYS_execve, path as u64, argv as u64, envp as u64) as i32
}

// Exit process
pub fn exit(status: i32) -> never {
    syscall(SYS_exit, status as u64)
    loop {}
}

// Exit group
pub fn exit_group(status: i32) -> never {
    syscall(SYS_exit_group, status as u64)
    loop {}
}

// Wait for process
pub fn wait4(pid: i32, status: *mut i32, options: i32, rusage: *const u8) -> i32 {
    syscall(SYS_wait4, pid as u64, status as u64, options as u64, rusage as u64) as i32
}

// Kill process
pub fn kill(pid: i32, sig: i32) -> i32 {
    syscall(SYS_kill, pid as u64, sig as u64) as i32
}

