// Get current time
pub fn gettimeofday(tv: *mut Timeval, tz: *const u8) -> i32 {
    syscall(SYS_gettimeofday, tv as u64, tz as u64) as i32
}

// Get clock time
pub fn clock_gettime(clock_id: i32, ts: *mut Timespec) -> i32 {
    syscall(SYS_clock_gettime, clock_id as u64, ts as u64) as i32
}

// Get monotonic time
pub fn clock_monotonic() -> i64 {
    let ts: Timespec
    clock_gettime(0, &ts)
    ts.tv_sec * 1_000_000_000 + ts.tv_nsec as i64
}

// Sleep for nanoseconds
pub fn nanosleep(ns: u64) {
    let ts = Timespec {
        tv_sec: (ns / 1_000_000_000) as i64,
        tv_nsec: (ns % 1_000_000_000) as i32,
    }
    syscall(SYS_nanosleep, &ts as *const Timespec as u64, &ts as *const Timespec as u64)
}

